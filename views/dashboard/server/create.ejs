<%- include('../header') -%>

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">افزودن سرور</h2>
<% 
let serverError = '';
let titleError = '';
let ipError = '';
let locationError = '';
let capacityError = '';
let statusError = '';

errors.forEach(err => { 
    if (err.param === 'server') {
        serverError = err.msg;
    } 

    if (err.param === 'title') {
        titleError = err.msg;
    } 
    
    if (err.param === 'ip') {
        ipError = err.msg;
    } 

    if (err.param === 'location') {
        locationError = err.msg;
    } 

    if (err.param === 'capacity') {
        capacityError = err.msg;
    } 

    if (err.param === 'status') {
        statusError = err.msg;
    } 
})
%>
<form action="/dashboard/server/create" method="POST">
    <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
        <label class="block text-sm">
            <span class="text-gray-700 dark:text-gray-400">عنوان</span>
            <input name="title"
                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input">
            <% if (titleError) { %>
                <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= titleError %></p>
            <% } %>
        </label>

        <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400">IP</span>
            <input name="ip"
                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input">
            <% if (ipError) { %>
                <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= ipError %></p>
            <% } %>
        </label>

        <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400">لوکیشن</span>
            <input name="location"
                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input">
            <% if (locationError) { %>
                <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= locationError %></p>
            <% } %>
        </label>

        <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400">ظرفیت</span>
            <input name="capacity" type="number"
                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input">
            <% if (capacityError) { %>
                <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= capacityError %></p>
            <% } %>
        </label>

        <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400">
                وضعیت
            </span>
            <select
                name="status"
                class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
                <option value="online">آنلاین</option>
                <option value="offline">آفلاین</option>
                <option value="maintenance">تعمیر</option>
            </select>
            <% if (statusError) { %>
                <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= statusError %></p>
            <% } %>
        </label>

        <button type="submit"
            class="mt-4 px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
            انتشار
        </button>

        <% if (serverError) { %>
            <p class="text-xs text-red-600 dark:text-red-400 mt-1"><%= serverError %></p>
        <% } %>
    </div>
</form>


<%- include('../footer') -%>