<%- include('./header') -%>

<% if (user.admin) { %>
<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Welcome Admin
</h2>

<hr>
<a href="/dashboard/payment" class="mt-4 px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">payment</a>

<% } else { %>

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Welcome User
</h2>

<% if (msg.length) { %>
  <p class="mb-4 text-xs text-green-700 dark:text-green-500 mt-1">
      <%= msg %>
  </p>
<% } %>

<%
errors.forEach(err => {
  if (err.msg) { %>
    <%= err.msg %>
    <p class="mb-4 text-xs text-red-600 dark:text-red-400 mt-1">
      <%= err.msg %>
    </p>
      <% }
  })
%>

<div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
    <label class="block text-sm">
      <span class="text-gray-700 dark:text-gray-400">
        آی پی فعلی شما
      </span>
      <div class="relative">
        <input id="userIpInput" autocomplete="off" value="<%= user.ip %>" class="block w-full pl-20 mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input" readonly>
        <button id="copyButton" class="absolute inset-y-0 end-0 px-4 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-e-md active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
          کپی
        </button>
      </div>
    </label>

    <label class="block mt-4 text-sm">
      <span class="text-gray-700 dark:text-gray-400">
        آی پی ثبت شده در سیستم
      </span>
      <form action="/dashboard/user/ip" method="POST">
        <input type="hidden" name="id" value="<%= user.id %>">
        <% for ( let i = 0; i <= planCapacity; i++ ) { %>
          <input autocomplete="off" name="ips" value="<%= user.ips[i] %>" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" >
        <% } %>
        <button class="mt-4 px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
          ثبت
        </button>
      </form>
    </label>
  </div>

<script>
  document.getElementById('copyButton').addEventListener('click', function() {
      const userIpInput = document.getElementById('userIpInput');
      userIpInput.select(); // Select the input value
      document.execCommand('copy'); // Copy the selected text to the clipboard

      // Optional: Provide feedback to the user
      alert('آی پی شما کپی شد: ' + userIpInput.value);
  });
</script>

<% } %>


<%- include('./footer') -%>